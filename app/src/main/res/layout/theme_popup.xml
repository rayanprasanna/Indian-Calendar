<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:id="@+id/theme_layout"
    android:layout_margin="0dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/search_bar"
        android:background="@color/colorPrimary"
        app:theme="@style/AppTheme.Toolbar">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:text="विषय"
            tools:ignore="HardcodedText" />
        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textColor="@android:color/black"
            android:layout_gravity="top|right"
            android:id="@+id/close"
            android:background="@drawable/close_win"
            android:visibility="visible"
            android:textStyle="bold"
            android:textSize="25sp"
            android:gravity="center"
            tools:ignore="HardcodedText,RtlHardcoded" />
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/search_bar"
        android:layout_gravity="center"
        android:gravity="center"
        tools:ignore="UselessLeaf,UselessParent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/blue_ray"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="ब्लू थीम"
                android:layout_margin="10dp"
                tools:ignore="HardcodedText" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_blue"
                android:layout_gravity="center"
                tools:ignore="ContentDescription" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/red_ray"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="लाल थीम"
                android:layout_marginHorizontal="10dp"
                tools:ignore="HardcodedText,UnusedAttribute" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_red"
                android:layout_gravity="center"
                tools:ignore="ContentDescription" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/green_ray"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="ग्रीन थीम"
                android:layout_margin="10dp"
                tools:ignore="HardcodedText" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_green"
                android:layout_gravity="center"
                tools:ignore="ContentDescription" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/purple_ray"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="बैंगनी थीम"
                android:layout_marginHorizontal="10dp"
                tools:ignore="HardcodedText,UnusedAttribute" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_purple"
                android:layout_gravity="center"
                tools:ignore="ContentDescription" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/pink_ray"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="गुलाबी थीम"
                android:layout_margin="10dp"
                tools:ignore="HardcodedText" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_pink"
                android:layout_gravity="center"
                tools:ignore="ContentDescription" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/default_ray"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="पूर्व निर्धारित विषय"
                android:layout_marginHorizontal="10dp"
                tools:ignore="HardcodedText,UnusedAttribute" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_default"
                android:layout_gravity="center"
                tools:ignore="ContentDescription" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>